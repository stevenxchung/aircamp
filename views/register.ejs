<% include ./partials/header %>

<div class="row">
    <h1 style="text-align: center">Sign Up</h1>
    <div style="width: 30%; margin: 25px auto; min-width: 250px;">
        <form action="/register" method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input class ="form-control" type="email" name="email" id="email" placeholder="email">
            </div>
            <div class="form-group">
                <label for="username">Username</label>
                <!-- Username must have no spaces and be between 2 and 16 characters -->
                <input class ="form-control" type="text" name="username" id="username" placeholder="username" pattern="^[a-zA-Z0-9]{2,26}$" required title="Username must be between 2 and 16 characters with no spaces!">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input class ="form-control" type="password" name="password" id="password" placeholder="password">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<% include ./partials/footer %>
