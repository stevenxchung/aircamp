<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= user.name %></h1>
        <div style = "width: 30%; margin: 25px auto; min-width: 250px;">
            <form action="/users/<%= user._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="firstName">First Name</label>
                    <input class="form-control" type="text" name="user[firstName]" id="firstName" value="<%= user.firstName %>">
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name</label>
                    <input class="form-control" type="text" name="user[lastName]" id="lastName" value="<%= user.lastName %>">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control" type="email" name="user[email]" id="email" value="<%= user.email %>">
                </div>
                <div class="form-group">
                    <label for="avatar">Avatar</label>
                    <input class="form-control" type="text" name="user[avatar]" id="avatar" value="<%= user.avatar %>">
                </div>
                <div class="form-group">
                    <label for="bio">Bio</label>
                    <textarea class="form-control" type="text" name="user[bio]" id="bio"><%= user.bio %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-default btn-block">Submit Changes</button>
                </div>
            </form>
            <a href="/users/<%= user.id %>">Back to profile</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
