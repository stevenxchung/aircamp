<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit Listing</h1>
        <div style = "width: 30%; margin: 25px auto; min-width: 250px;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="campground[name]" id="name" value="<%= campground.name %>" pattern=".{10,50}$" required title="Your post must be between 10-50 characters long!">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input class="form-control" type="number" name="campground[price]" id="price" value="<%= campground.price %>" min="0.01" step="0.01" max="10000.00" required>
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="text" name="campground[image]" id="image" value="<%= campground.image %>" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description" required><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-default btn-block">Submit Changes</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id %>">Back to listing</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
